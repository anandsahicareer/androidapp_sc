<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    tools:context="com.bangalore.sahicareer.Edit_profile">



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:text="Name"
        android:gravity="center|left|bottom"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/ep_et_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:imeOptions="actionNext"
        android:singleLine="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:text="Email Address"
        android:gravity="center|left|bottom"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/ep_et_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:imeOptions="actionNext"
        android:singleLine="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:text="Phone Number"
        android:gravity="center|left|bottom"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/ep_et_mobileno"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:maxLength="10"
        android:imeOptions="actionNext"
        android:singleLine="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"/>
        <Button
            android:id="@+id/ep_bt_update_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:text="Update Now"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/roundedbutton_otpblue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"/>
</LinearLayout>